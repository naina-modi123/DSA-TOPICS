class Solution {
    public int maxSubarraySum(int[] arr, int k) {
        // Code here
        int n = arr.length;
        int sum = 0, maxSum = 0;
        for(int i=0;i<k;i++){
            sum += arr[i];
        }
        maxSum = sum;
        int i=k, j= 0;
        while(i < n){
            sum += arr[i];
            sum -= arr[j];
            if(sum > maxSum){
                maxSum = sum;
            }
            i++;
            j++;
        }
        return maxSum;
    }
}
