class Solution {
    public int numSquares(int n) {
        if(n < 0) return Integer.MIN_VALUE;
        if(n == 0) return 0;
        int minCount = n;
        for(int i=1;i*i <= n;i++){
            int count = numSquares(n-i*i)+1;
            if(count < minCount){
                minCount = count;
            }
        }
        return minCount;
    }
}
